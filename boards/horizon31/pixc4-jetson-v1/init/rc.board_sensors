#!/bin/sh
#
# Horizon31 PixC4-Jetson V1 specific board sensors init
#------------------------------------------------------------------------------
board_adc start

# Internal SPI bus ICM-42688
icm42688 -R 2 -s start

# Internal SPI bus ICM-20602
icm20602 -R 2 -s start


# internal compass
rm3100 -I -R 10 start

# Baro on internal SPI
ms5611 -s start

# External compass on GPS1/I2C1: standard Holybro GPS/compass puck (with lights, safety button, and buzzer)
ist8310 -X -b 1 -R 10 start
